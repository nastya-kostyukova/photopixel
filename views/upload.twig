{% extends 'account.twig'  %}
{% block content %}

<form action="{{ path('user_upload', {'user' : user_name }) }}" method="post" enctype="multipart/form-data">
    Select image to upload:
    <input type="file" name="fileToUpload" id="fileToUpload">
    <input type="text" name="title" id="title-input" placeholder="Title" autofocus required>
    <input type="text" name="description" id="description-input" placeholder="Description" autofocus required>
    <input type="submit" value="Upload Image" name="submit">
</form>
    {{ message }}
{% endblock %}